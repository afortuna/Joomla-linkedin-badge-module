<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5" client="site" method="upgrade">
	<name>LinkedIn Badge</name>
	<author>Theo van der Sluijs</author>
	<creationDate>July 2012</creationDate>
	<copyright>(C) 2011 Theo van der Sluijs / IamboredsoIblog.eu</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@IamboredsoIblog.eu</authorEmail>
	<authorUrl>www.IamboredsoIblog.eu</authorUrl>
	<version>1.6.2</version>
	<description>Shows badge with a link to a LinkedIn profile page.</description>
	<files>
		<filename module="mod_linkedin_badge">mod_linkedin_badge.php</filename>
		<filename>mod_linkedin_badge.xml</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<languages>
        <!-- Any language files included with the module -->
        <language tag="en-GB">en-GB.mod_linkedin_badge.ini</language>
    </languages>		
	<config>
		<fields name="params">
			<fieldset name="basic">	
		<field name="LinkInDescription" type="text" default="" label="Small description" description="eg: If you want to see my LinkedIn profile, click on this button:" />
		<field name="LinkInUrl" type="text" default="" label="Url to your LinkedIn Page" description="eg: http://www.linkedin.com/in/tvdsluijs/" />
		<field name="LinkInBadge" type="list" default="" label="Pick Badge" description="Pick a LinkedIn Badge">
		    <option value="btn_viewmy_160x33.gif">View Profile 160x33</option>
		    <option value="btn_myprofile_160x33.gif">My Profile 160x33</option>
		    <option value="btn_viewmy_160x25.gif">View Profile 160x25</option>
		    <option value="btn_viewmy_120x33.gif">View Profile 120x33</option>
		    <option value="btn_linkedin_120x30.gif">LinkedIn 120x33</option>
		    <option value="btn_profile_greytxt_80x15.gif">Profile Grey 80x15</option>
		    <option value="btn_profile_bluetxt_80x15.gif">Profile Blue 80x15</option>
		    <option value="btn_liprofile_blue_80x15.gif">LinkedIn 80x15</option>
		</field>		
			</fieldset>
		<fieldset name="advanced">
		<field name="Blink" type="list" default="0" label="Show Backlink" description="Show a backlink to IamBoredsoIblog.eu">
 		    <option value="0">Yes</option> 
		    <option value="1">No</option> 
		</field>	
			</fieldset>			
		</fields>
	</config>
</extension>
